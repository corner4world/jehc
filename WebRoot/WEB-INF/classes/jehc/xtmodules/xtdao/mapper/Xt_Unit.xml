<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.xtmodules.xtmodel.Xt_Unit">
	<!--初始化分页-->
	<select id="getXtUnitListByCondition" resultType="jehc.xtmodules.xtmodel.Xt_Unit" parameterType="map">
		SELECT
			`xt_unit_id`,
			`xt_unitName`
		FROM 
			xt_unit
		WHERE 1=1
		<if test="null !=xt_unitName">
			AND instr(xt_unitName,#{xt_unitName})
		</if>
	</select>

	<!--查询对象-->
	<select id="getXtUnitById" resultType="jehc.xtmodules.xtmodel.Xt_Unit" parameterType="string">
		SELECT
			`xt_unit_id`,
			`xt_unitName`
		FROM 
			xt_unit
		WHERE xt_unit_id=#{xt_unit_id}
	</select>

	<!--添加-->
	<insert id="addXtUnit" parameterType="jehc.xtmodules.xtmodel.Xt_Unit">
		INSERT INTO
			xt_unit
			(
			`xt_unit_id`,
			`xt_unitName`
			)
			VALUES
			(
			#{xt_unit_id},
			#{xt_unitName}
			)
	</insert>

	<!--修改-->
	<update id="updateXtUnit" parameterType="jehc.xtmodules.xtmodel.Xt_Unit">
		UPDATE
			xt_unit
		SET
			`xt_unit_id` = #{xt_unit_id},
			`xt_unitName` = #{xt_unitName}
		WHERE xt_unit_id=#{xt_unit_id}
	</update>

	<!--删除-->
	<delete id="delXtUnit" parameterType="map">
		DELETE FROM xt_unit WHERE xt_unit_id IN
		<foreach item="item" index="index" collection="xt_unit_id" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>